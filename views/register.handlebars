<div class="container">
    <div class="col-lg-6 my-5 mx-auto">
        <h1>{{title}}</h1>

        {{#if errors}}
            <div>
                <p class="error-message"><strong>Please review your submitted information:</strong></p>
                <p id="errors"><strong>{{message}}</strong></p>
                {{#each errors}}
                    <div id="errors">
                        <p class="error"><strong>{{this.msg}}</strong></p>
                    </div>
                {{/each}}
            </div>
        {{/if}}

        <form class="register-user" method="POST" action="/register">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Username">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="passwordMatch">Re-Enter Password</label>
                <input type="password" id="passwordMatch" name="passwordMatch" class="form-control"
                    placeholder="Password">
            </div>
            <button id="submit" type="submit" class="btn btn-primary">Submit</button>
        </form>
        <br>

    </div>
</div>